#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the value of n: " << endl;
    cin >> n;

    int total = 0;
    for (int i = 1; i <= n; i++) {
        total += i;
    }

    cout << "Sum of first " << n << " natural numbers = " << total << endl;
    return 0;
}
/*Output:-
Enter the value of n: 
5
Sum of first 5 natural numbers = 15
*/
